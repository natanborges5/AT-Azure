@model IEnumerable<WebApp.Models.Amigo.ListarAmigoViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sobrenome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dataAniversario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.urlFoto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sobrenome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dataAniversario)
            </td>
            <td>
                <img style="max-width: 50px; max-height: 40px;" src="@Html.DisplayFor(modelItem => item.urlFoto)" />
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { @id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { @id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { @id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
