@model IEnumerable<WebApp.Models.Paises.ListarPaisViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Criar novo pais</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.urlFoto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td>
                <img style="max-width: 50px; max-height: 40px;"  src="@Html.DisplayFor(modelItem => item.urlFoto)"/>
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { @id=item.Id }) |
                @Html.ActionLink("Detalhes", "Details", new { @id = item.Id }) |
                @Html.ActionLink("Deletar", "Delete", new { @id = item.Id }) |
                <a href="/paises/@item.Id/estados">Estados</a>
            </td>
        </tr>
}
    </tbody>
</table>
